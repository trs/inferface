{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2021"
  },
  "ts-inter": {
    "include": ["./src/*.dto.ts"],
    "outFile": "./out/file/out.d.ts",
    "outDir": "./out/dir"
  }
}
